<a href="employees_form/0/add" class="btn btn-primary float-right mb-4"><i class="fa fa-plus-circle mr-2"></i>Ajouter un employé</a>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Email</th>
                <th>Métier</th>
                <th>Coût journalier</th>
                <th>Date d'embauche</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for employee in employees %}
            <tr>
                <td>{{ employee.firstname|capitalize }} {{ employee.lastname|upper }}</td>
                <td>{{ employee.email }}</td>
                <td>{{ employee.job.name }}</td>
                <td>{{ employee.dayCost }}</td>
                <td>{{ employee.createdAt|date("m/d/Y") }}</td>
                <td>
                    <a href="employees_details/{{ employee.id }}" class="btn btn-primary btn-sm">
                        <i class="fa fa-eye mr-0"></i>
                    </a>
                    <a href="employees_form/{{ employee.id }}/update" class="btn btn-info btn-sm">
                        <i class="fa fa-pencil mr-0"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>