 {% extends 'layout.html.twig' %}
 {% block content %}
 <main class="app-content">
     <div class="app-title">
         <div>
             <h1><i class="fa fa-users"></i>&nbsp;Edition d'un projet</h1>
         </div>
         <ul class="app-breadcrumb breadcrumb">
             <li class="breadcrumb-item">
                 <a href="#"><i class="fa fa-home fa-lg"></i></a>
             </li>
             <li class="breadcrumb-item">
                 <a href="#">{{ title }}</a>
             </li>
             <li class="breadcrumb-item">Edition d'un projet</li>
         </ul>
     </div>
     <div class="tile">
         {% for message in app.flashes('success') %}
         <div class="alert alert-dismissible alert-success my-4">
             <button class="close" type="button" data-dismiss="alert">×</button> {{ message }}
         </div>
         {% endfor %}
         <div class="form-horizontal">
             {{ form_start(form) }}
             <section>
                 <h3>Informations générales</h3>
                 <div class="row mt-4">
                     <div class="offset-md-4 col-md-8">
                         <div class="form-group row">
                             {{ form_errors(form.name) }}
                             {{ form_label(form.name) }}
                             {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': form.name.vars.label} }) }}
                         </div>
                         <div class="form-group row">
                             {{ form_errors(form.description) }}
                             {{ form_label(form.description) }}
                             {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': form.description.vars.label} }) }}
                         </div>
                     </div>
                 </div>
             </section>
             <hr />
             <section>
                 <h3>Production</h3>
                 <div class="row mt-4">
                     <div class="offset-md-4 col-md-8">
                         <div class="form-group row">
                             {{ form_errors(form.salesPrice) }}
                             {{ form_label(form.salesPrice) }}
                             {{ form_widget(form.salesPrice, {'attr': {'class': 'form-control', 'placeholder': form.salesPrice.vars.label} }) }}
                         </div>
                     </div>
                 </div>
             </section>
             <hr />
             <div class="row">
                 <div class="offset-md-6 col-md-6">
                     <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>Enregistrer</a>
                 </div>
             </div>
             {{ form_end(form) }}
         </div>


     </div>
 </main>

 {% endblock %}