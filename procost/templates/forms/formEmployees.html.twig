 {% extends 'layout.html.twig' %}
 {% block content %}
 <main class="app-content">
     <div class="app-title">
         <div>
             <h1><i class="fa fa-users"></i>&nbsp;Edition d'un employé</h1>
         </div>
         <ul class="app-breadcrumb breadcrumb">
             <li class="breadcrumb-item">
                 <a href="/"><i class="fa fa-home fa-lg"></i></a>
             </li>
             <li class="breadcrumb-item">
                 <a href="/employees">{{ title }}</a>
             </li>
             <li class="breadcrumb-item">Edition d'un employé</li>
         </ul>
     </div>
     <div class="tile">

         {% for message in app.flashes('success') %}
         <div class="alert alert-dismissible alert-success my-4">
             <button class="close" type="button" data-dismiss="alert">×</button> {{ message }}
         </div>
         {% endfor %}
         <div class="form-horizontal">
             {{ form_start(form) }}
             <section>
                 <h3>Informations générales</h3>
                 <div class="row mt-4">
                     <div class="offset-md-4 col-md-8">
                         <div class="form-group row">
                             {{ form_errors(form.firstName) }}
                             {{ form_label(form.firstName) }}
                             <br> {% if action == 'update' %} Ancien nom : {{ employee.lastName }} {% endif %}
                             {{ form_widget(form.firstName, {'attr': {'class': 'form-control', 'placeholder': form.firstName.vars.label} }) }}
                         </div>
                         <div class="form-group row">
                             {{ form_errors(form.lastName) }}
                             {{ form_label(form.lastName) }}
                             <br> {% if action == 'update' %} Ancien prénom : {{ employee.firstName }} {% endif %}
                             {{ form_widget(form.lastName, {'attr': {'class': 'form-control', 'placeholder': form.lastName.vars.label} }) }}
                         </div>
                         <div class="form-group row">
                             {{ form_errors(form.email) }}
                             {{ form_label(form.email) }}
                             <br> {% if action == 'update' %} Ancien email : {{ employee.email }} {% endif %}
                             {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': form.email.vars.label} }) }}
                         </div>
                     </div>
                 </div>
             </section>
             <hr />
             <section>
                 <h3>Production</h3>
                 <div class="row mt-4">
                     <div class="offset-md-4 col-md-8">
                         <div class="form-group row">
                             {{ form_errors(form.job) }}
                             {{ form_label(form.job) }}
                             <br> {% if action == 'update' %} Ancien métier : {{ employee.job.name }} {% endif %}
                             {{ form_widget(form.job, {'attr': {'class': 'form-control'} }) }}
                         </div>
                         <div class="form-group row">
                             {{ form_errors(form.dayCost) }}
                             {{ form_label(form.dayCost) }}
                             <br> {% if action == 'update' %} Ancien salaire journalier : {{ employee.dayCost }}€/jour {% endif %}
                             {{ form_widget(form.dayCost, {'attr': {'class': 'form-control', 'placeholder': form.dayCost.vars.label} }) }}
                         </div>
                         <div class="form-group row">
                             {{ form_errors(form.createdAt) }}
                             {{ form_label(form.createdAt) }}
                             <br> {% if action == 'update' %} Ancienne date d'embauche : {{ employee.createdAt|date("m/d/Y") }} {% endif %}
                             {{ form_widget(form.createdAt, {'attr': {'class': 'form-control', 'placeholder': form.createdAt.vars.label} }) }}
                         </div>
                         <div class="row">
                             <div class="offset-md-6 col-md-6">
                                 <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>
                                    {% if action == 'add' %}Ajouter{% else %} Modifier {% endif %}</a>
                             </div>
                         </div>
                     </div>
                 </div>
             </section>
             {{ form_end(form) }}
         </div>
     </div>
 </main>

 {% endblock %}