{% extends 'layout.html.twig' %}
{% block content %}
        <main class="app-content">
            <div class="app-title">
                <div>
                    <h1><i class="fa fa-users"></i>&nbsp;Suivi de Prénom NOM</h1>
                </div>
                <ul class="app-breadcrumb breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/"><i class="fa fa-home fa-lg"></i></a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="/project">Employés</a>
                    </li>
                    <li class="breadcrumb-item">Suivi de Prénom NOM</li>
                </ul>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="tile">
                        <table class="table table-striped table-bordered table-sm">
                            <tbody>
                                <tr>
                                    <th>Nom</td>
                                    <td>{{ project.name }}</td>
                                </tr>
                                <tr>
                                    <th>Description</td>
                                    <td>{{ project.description }}</td>
                                </tr>
                                <tr>
                                    <th>Prix de vente</td>
                                    <td>{{ project.salesPrice }} €</td>
                                </tr>
                                <tr>
                                    <th>Date de création</td>
                                    <td>{{ project.createdAt|date("m/d/Y") }}</td>
                                </tr>
                                <tr>
                                    <th>Date de livraison </td>
                                    <td>{{ project.deliverDate|date("m/d/Y") }}</td>
                                </tr>
                                <tr>
                                    <th>Nombre d'employés </td>
                                    <td> {{ totalEmployee }} </td>
                                </tr>
                                <tr>
                                    <th>Coût total de production </td>
                                    <td>{{ cout }}</td>
                                </tr>
                            </tbody>
                        </table>
                        <a href="/project_form/{{ project.id }}/update" class="btn btn-info">
                            <i class="fa fa-pencil"></i>Modifier
                        </a>
                    </div>
                    
                </div>
                <div class="col-md-8">
                    <div class="tile pb-5">
                        <h3 class="tile-title">Historique des employés</h3>
                        <div class="table-responsive">
                            <table class="table table-striped table-hover table-sm">
                                <thead>
                                    <tr>
                                        <th>Prénom NOM</th>
                                        <th>Nombre de jours travaillés passés sur le projet</th>
                                        <th>Coût total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for employee in employees %}
                                    {# <tr>
                                        <td>Nom du projet</td>
                                        <td>4 jours</td>
                                        <td>1 400 €</td>
                                    </tr> #}
                                    <tr>
                                        <td>{{ employee.employee.firstName }} {{ employee.employee.lastName }}</td>
                                        <td>{{ employee.day }}</td>
                                        <td>{{ (employee.day)*(employee.employee.dayCost) }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <hr/>
                        <nav class="float-right">
                            <ul class="pagination">
                                <li class="page-item disabled">
                                    <span class="page-link">&laquo;</span>
                                </li>
                                <li class="page-item active" aria-current="page">
                                    <span class="page-link">1<span class="sr-only">(current)</span></span>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="#">2</a></li>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="#">3</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="#">&raquo;</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </main>

    
    {% endblock %}